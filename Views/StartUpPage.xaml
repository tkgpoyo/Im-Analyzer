<UserControl x:Class="Im_Analyzer.Views.StartUpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Im_Analyzer.Views"
             
             xmlns:vm="clr-namespace:Im_Analyzer.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:StartUpPageViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2"/>

        <Label Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64">Im__Analyzer</Label>

        <Button Grid.Row="1" Width="90" Height="30" Margin="100,10,10,50" FontSize="18">Start</Button>
        <Button Grid.Column="1" Grid.Row="1" Width="90" Height="30" Margin="10,10,100,50" FontSize="18">Tutorial</Button>
    </Grid>
</UserControl>
